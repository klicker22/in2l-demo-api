    "config": "^3.1.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "http-status-codes": "^1.3.2",
    "jsonwebtoken": "^8.5.1",
    "request": "^2.88.0",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "0.0.34",
    "@types/express": "^4.16.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "^13.13.4",
    "concurrently": "^4.1.0",
    "nodemon": "^1.19.0"
  }
}
