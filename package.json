{
  "name": "demo-api",
  "version": "1.0.0",
  "description": "Demo API based on Mongoose Node.js Express TypeScript application boilerplate",
  "author": "Rob Wilburn",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "watch-tsc": "tsc -w",
    "deploy": "node dist/server.js",
    "watch-deploy": "nodemon dist/server.js",
